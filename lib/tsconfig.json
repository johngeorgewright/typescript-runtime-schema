{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "plugins": [
      { "transform": "@typescript-runtime-schema/transform" },
    ],
    "types": ["./node_modules/@typescript-runtime-schema/is/typings"]
  },
  "include": [
    "src/**/*"
  ]
}